# Azure OpenAI Configuration
# Get these values from Azure Portal -> Your OpenAI Resource -> Keys and Endpoint

AZURE_OPENAI_API_KEY=your-api-key-here
AZURE_OPENAI_ENDPOINT=https://your-resource.cognitiveservices.azure.com/
AZURE_OPENAI_API_VERSION=2025-01-01-preview
AZURE_OPENAI_EMBEDDING_API_VERSION=2023-05-15

# Model Deployments
# These should match your deployment names in Azure Portal
AZURE_OPENAI_DEPLOYMENT=gpt-4o-mini
AZURE_OPENAI_EVAL_DEPLOYMENT=gpt-4o-mini
AZURE_OPENAI_EMBEDDING_DEPLOYMENT=text-embedding-3-small

# Azure AI Search Configuration (Optional - only needed for Streamlit App Q&A feature)
# Leave empty if not using the chatbot interface
AZURE_AI_SEARCH_KEY=
AZURE_AI_SEARCH_ENDPOINT=
AZURE_AI_SEARCH_INDEX_NAME=innovation-index

# Input Parameters (for innovation resolution algorithm)
# These control the deduplication and clustering behavior
INPUT_FIRST_ORDER_K=10
INPUT_SECOND_ORDER_K=15
INPUT_TEMPERATURE=0.01
INPUT_VALIDITY_THRESHOLD=0.4
INPUT_AGGREGATION_THRESHOLD=0.5
